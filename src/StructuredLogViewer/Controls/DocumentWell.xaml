<UserControl x:Class="StructuredLogViewer.Controls.DocumentWell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StructuredLogViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid>
    <TabControl x:Name="tabControl" IsSynchronizedWithCurrentItem="True">
    </TabControl>
    <Button x:Name="closeButton"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="closeButton_Click"
            Template="{DynamicResource closeButtonTemplate}"
            ToolTip="Close the source code view">
    </Button>
  </Grid>
</UserControl>
